    },
    "collections":{
        "caption":"Collections",
        "type":"section",
        "settings":{
        }
    },
    "blogs":{
        "caption":"Blogs",
        "type":"section",
        "settings":{
        }
    },
    "cart":{
        "caption":"Cart",
        "type":"section",
        "settings":{
            "cart_notes_enable":{
                "caption":"Enable personal message in cart",
                "type":"checkbox",
                "default":true
            }
        }
    }
