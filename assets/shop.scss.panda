/*============================================================================
	#Site Header
==============================================================================*/
.site-header {
	padding: $gutter/2 0;

	@include at-query ($min, $large) {
		padding: $gutter 0;
	}

	@include at-query ($min, $large) {
		.grid {
			display: table;
			table-layout: fixed;
			width: 100%;

			& > .grid-item {
				float: none;
				display: table-cell;
				vertical-align: middle;
			}
		}
	}
}

.header-logo {
	text-align: center;
	font-size: em(40px);
	margin: 0 auto $gutter/2;
	max-width: 100%;
	height:auto;

	@include at-query ($min, $large) {
		margin-bottom: 0;
	}

	a,
	a:hover,
	a:focus {
		text-decoration: none;
	}

	a, img {
		display: block;
	}

	img {
		margin: 0 auto;
	}
}

.site-header--text-links {
	margin-bottom: 0;
}

.search-bar {
	max-width: 100%;

	@include at-query ($max, $medium) {
		margin: 0 auto;
	}
}

/*============================================================================
	#Site Nav and Dropdowns
==============================================================================*/
.nav-bar {
	background-color: $colorNav;

	a {
		color: $colorNavText;

		&:hover,
		&:active,
		&:focus {
			color: darken($colorNavText, 15%);
		}
	}

	ul {
		margin: 0;
	}

	li {
		margin: 0;
	}
}

.site-nav {
	font-size: em(16px);
	cursor: default;

	li {
		margin: 0;
		display: block;
	}

	& > li {
		position: relative;
		display: inline-block;

		&:first-child a {
			padding-left: 0;
		}
	}

	a {
		display: block;
		text-decoration: none;
		padding: $gutter/2;
		white-space: nowrap;
	}

	@include at-query ($max, $medium) {
		margin: 0 auto;
		text-align: center;
	}
}

.site-nav--active > a {
	font-weight: bold;
}

/*================ Dropdowns ================*/
.site-nav--dropdown {
	display: none;
	position: absolute;
	left: 0;
	z-index: 5;

	.site-nav--has-dropdown:hover &,
	.site-nav--has-dropdown.nav-hover &,
	.nav-focus + & {
		display: block;
	}

	a {
		background-color: $colorNav;

		&:hover,
		&:active,
		&:focus {
			background-color: darken($colorNav, 10%);
		}
	}
}

/*================ Search bar in header ================*/
.nav-search {
	position: relative;
	padding: 7px 0;

	@include at-query ($max, $medium) {
		padding: 0 0 $gutter/2;
		margin: 0 auto;
		text-align: center;
	}

	.input-group,
	.input-group-field {
		margin-bottom: 0;
	}
}

.highlight {
    background-color: #e1e900;
}


/*============================================================================
	#Site Footer
==============================================================================*/
.site-footer {
	background-color: $colorFooterBg;
	border-top: 1px solid $colorBorder;
	padding: $gutter 0;
	color: $colorFooterText;

	@include at-query ($min, $large) {
		padding: $gutter*2 0;
	}
}

/*============================================================================
	#Product Grid and List Views
==============================================================================*/
.sold-out {

}

.on-sale {

}

.product-grid-item {
	display: block;
	text-decoration: none;
}

.product-grid-image, .collection-grid-image {
	display: block;
	margin: 0 auto $gutter/2;

	img {
		display: block;
		margin: 0 auto;
	}
}

/*============================================================================
	#Collection Filters
==============================================================================*/
.active-filter {
	font-weight: bold;
}

/*============================================================================
	#Breadcrumbs
==============================================================================*/
.breadcrumb {
	margin-bottom: $gutter;

	a,
	span {
		display: inline-block;
		padding: $gutter/2 7px $gutter/2 0;
		margin-right: 7px;

		&:first-child {
			padding-left: 0;
		}
	}
}


/*============================================================================
	#Product Page
==============================================================================*/
.product-variants {
	display: none;

	.no-js & {
		display: block;
	}
}

.rating-wrapper {
    font-size: em(20px);
    .active:before {
        color: $colorLink;
    }
}

.key-features li:before {
    content: "✓";
    margin-right: 10px;
}
.key-features {
    margin-top: $gutter/2;
    li {
        font-size: em(16px);
    }
}

.review-box {
    border: 1px solid $colorBorder;
    border-radius: $radius;
    padding: $gutter;
    margin-bottom: $gutter;
    hr {
        margin:$gutter/2 0;
    }
}

@include at-query($min, $large) {
	.selector-wrapper,
	.product-variants {
		select {
			max-width: 40%;
		}
	}
}

.product-photo-container {
	margin-bottom: $gutter;
}

.product-photo-container,
.product-photo-thumbs {
	a, img {
		display: block;
		margin: 0 auto;
	}

	li {
		margin-bottom: $gutter;
	}
}
.product-review-count {
	white-space: nowrap;
}
.review {
	margin-bottom: $gutter;

	& + & {
		border-top: 1px solid $colorBorder;
		padding-top: $gutter;
	}
}
/*============================================================================
	#Blogs and Comments
==============================================================================*/
.comment {
	margin-bottom: $gutter;

	& + & {
		border-top: 1px solid $colorBorder;
		padding-top: $gutter;
	}
}


/*============================================================================
	#Notes and Form Feedback
==============================================================================*/
.note,
.errors {
	border-radius: $radius;
	padding: $gutter/2;
	margin-bottom: $gutter/2;
	border: 1px solid transparent;

	ul,
	ol {
		margin-top: 0;
		margin-bottom: 0;
	}

	li:last-child {
		margin-bottom: 0;
	}

	p {
		margin-bottom: 0;
	}
}

.note {
	border-color: $colorBorder;
}

.errors {
	ul {
		list-style: disc outside;
		margin-left: 20px;
	}
}

.form-success {
	color: $successGreen;
	background-color: lighten($successGreen, 65%);
	border-color: $successGreen;
}

.form-error,
.errors {
	color: $errorRed;
	background-color: $errorRedBg;
	border-color: $errorRed;
}


/*============================================================================
	#Cart Page
==============================================================================*/
.cart-row {
	margin-top: $gutter;
	padding-top: $gutter;
	border-top: 1px solid $colorBorder;

	&:first-child {
		margin-top: 0;
	}

	&:first-child {
		padding-top: 0;
		border-top: 0 none;
	}

	a {
		color: $colorTextBody;

		&:hover {
			color: $colorPrimary;
		}
	}
}

.cart-subtotal {
	margin-bottom: $gutter;
}

.cart-subtotal--price {
	margin: 0 0 0 $gutter/3;
	display: inline;
}
.quantity-selector-wrapper {
    margin-bottom: $gutter/2;
    max-width:140px;
    
    .quantity-selector {
        text-align: center;
        border-right:none;
        border-left:none;
        min-width: 50px;
    }
    .btn {
        width: 37px;
        text-align:center;
        background-color: #fff;
        color: #000000;
        border: 1px solid $colorBorder;
    }
}
@include at-query ($max, $small) {
    .template-cart .quantity-selector-wrapper input {
        min-width: 0px;
    }
	.template-cart .quantity-selector-wrapper .btn {
        width:auto;
        padding-left:7px;
        padding-right:7px;
        border: 0;
    }
}

/*==============================================================
    #Social Sharing
================================================================*/
/*=== Social share buttons ===*/
$shareButtonHeight: 22px;
$shareButtonCleanHeight: 30px;
$shareCountBg: #fff;
$shareBorderColor: #ececec;

.social-sharing {
  font-family: "HelveticaNeue", "Helvetica Neue", Helvetica, Arial, sans-serif;
  padding-top: $gutter/2;

  a {
    display: inline-block;
    color: #fff;
    border-radius: 2px;
    margin: 0 10px 10px 0;
    height: $shareButtonHeight;
    line-height: $shareButtonHeight;
    text-decoration: none;
    font-weight: normal;

    &:hover {
      color: #fff;
    }
  }

  span {
    display: inline-block;
    vertical-align: top;
    height: $shareButtonHeight;
    line-height: $shareButtonHeight;
    font-size: 12px;
  }

  i {
    padding: 0 5px 0 10px;

    &:before {
      line-height: $shareButtonHeight;
    }
  }
}

.share-title {
  font-weight: 900;
  font-size: 12px;
  padding-right: 10px;
}

.share-facebook {
  background-color: #3b5998;

  &:hover {
    background-color: darken(#3b5998, 10%);
  }
}

.share-fancy {
  background-color: #4999dc;

  &:hover {
    background-color: darken(#4999dc, 10%);
  }
}

.share-twitter {
  background-color: #00aced;

  &:hover {
    background-color: darken(#00aced, 10%);
  }
}

.share-pinterest {
  background-color: #cb2027;

  &:hover {
    background-color: darken(#cb2027, 10%);
  }
}

.share-google {
  background-color: #dd4b39;

  &:hover {
    background-color: darken(#dd4b39, 10%);
  }
}

.share-count {
  position: relative;
  background-color: $shareCountBg;
  padding: 0 8px;
  margin-right: -2px;
  font-size: 14px;
  line-height: $shareButtonHeight - 2;
  color: #333;
  border-radius: 0 2px 2px 0;
  border: 1px solid $shareBorderColor;
  opacity: 0;
  @include transition(opacity 0.2s ease-in);

  &.is-loaded {
    opacity: 1;
  }

  &:before,
  &:after {
    content: '';
    display: block;
    position: absolute;
    top: 50%;
    margin-top: -6px;
    width: 0;
    height: 0;
    border-top: 6px solid transparent;
    border-bottom: 6px solid transparent;
    border-right: 6px solid;
  }

  &:before {
    left: -6px;
    border-right-color: $shareBorderColor;
  }

  &:after {
    left: -5px;
    border-right-color: $shareCountBg;
  }

  a:hover & {
    background-color: darken($shareCountBg, 4%);

    &:after {
      border-right-color: darken($shareCountBg, 4%);
    }
  }

}

